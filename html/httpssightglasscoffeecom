    var coffeeState = ".coffee-quantity";
    var isFinished;
    var locked = false;
    var one, two, three;


    // https://jsfiddle.net/foozle/0sdt33dz/1/
    function animateHead(number, scale) {
        var line = Snap('#arrow-head-' + number);
        var lineLength = line.getTotalLength();
        var s = Snap('#arrow-' + number);
        var lineDraw = s.path($('#arrow-head-' + number).attr('d'));
        var matrix = new Snap.Matrix();
        matrix.scale(scale, scale);
        lineDraw.transform(matrix);
        lineDraw.attr({
            'fill': 'none',
            'stroke': "#522E1F",
            'stroke-width': '4',
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'stroke-dasharray': lineLength + ' ' + lineLength,
            'stroke-dashoffset': lineLength,
        });
        lineDraw.animate({
            strokeDashoffset: 0
        }, 1000, mina.easein, function () {
            /* console.log('done');*/
        })
    }

    function animateArrow(number, scale) {
        var line = Snap('#arrow-body-' + number);
        var lineLength = line.getTotalLength();
        var s = Snap('#arrow-' + number);
        var lineDraw = s.path($('#arrow-body-' + number).attr('d'));
        var matrix = new Snap.Matrix();
        matrix.scale(scale, scale);
        lineDraw.transform(matrix);
        lineDraw.attr({
            'fill': 'none',
            'stroke': "#522E1F",
            'stroke-width': '4',
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'stroke-dasharray': lineLength + ' ' + lineLength,
            'stroke-dashoffset': lineLength,
        });
        lineDraw.animate({
            strokeDashoffset: 0
        }, 1000, mina.easein, function () {
            /* console.log('done');*/
            animateHead(number, scale)
        })
    }


    $(function () {
        var scale;

        if($('.subscribe-page').length > 0){ $(window).scroll(function () {
            if ($(window).width() < 500) {
                scale = 0.3
            } else {
                scale = 1
            }
            if (!one && $(window).scrollTop() + 500 > $('#pick-it').position().top) {
                animateArrow("one", scale);
                one = true;
            }
            if (!two && $(window).scrollTop() + 500 > $('#ship-it').position().top) {
                animateArrow("two", scale);
                two = true;
            }
            if (!three && $(window).scrollTop() + 500 > $('#brew-it').position().top) {
                animateArrow("three", scale);
                three = true;
            }

        });}

    });
</script>

